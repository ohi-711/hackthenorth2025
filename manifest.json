{
  "manifest_version": 3,
  "name": "StockSwap Shopping Advisor",
  "version": "1.0.0",
  "description": "Transform online shopping impulses into investment learning opportunities with RBC InvestEase and Cohere AI",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "background",
    "contextMenus"
  ],
  
  "host_permissions": [
    "https://api.cohere.ai/*",
    "https://rbc-investease-api.com/*",
    "https://2dcq63co40.execute-api.us-east-1.amazonaws.com/*",
    "https://*.amazon.com/*",
    "https://*.amazon.ca/*",
    "https://*.ebay.com/*",
    "https://*.walmart.com/*",
    "https://*.target.com/*",
    "https://*.bestbuy.com/*",
    "https://*.shopify.com/*",
    "https://*/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "StockSwap Shopping Advisor"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*",
        "https://*.ebay.com/*",
        "https://*.walmart.com/*",
        "https://*.target.com/*",
        "https://*.bestbuy.com/*",
        "https://*.shopify.com/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.css", "content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}